<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RemoveDPI" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.RemoveDPI.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#0E1514</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_removedpi_monochrome</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.RemoveDPI</item>
    </style>
</resources>